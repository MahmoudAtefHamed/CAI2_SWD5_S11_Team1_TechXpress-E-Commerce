@{
}
@model List<Site_User>
<h1 class="text-center">All Site Users</h1>

    <a asp-action="New" asp-controller="SiteUser" class="btn btn-info d-block w-25 text-center"> New </a>

    <table class="table table-bordered table-hover">

        <tr>
            <th>ID</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Password</th>
            <th>Operation</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.EmailAddress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Password</td>
                <td>
                    <a asp-action="Details" asp-controller="SiteUser" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="SiteUser" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="SiteUser" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>