@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white text-center py-2">Category List </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>

            </div>
        </div>


        <table class="table table-bordered table-striped table-hover text-center">


            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>DisplayOrder</th>
                <th>Operations</th>
            </tr>
            @foreach (var item in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-x-circle"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="container">

   
</div>
