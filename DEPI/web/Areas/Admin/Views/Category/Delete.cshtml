@{
}
@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white text-center py-2">Delete Category </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="DeleteConfirmed" asp-controller="Category" asp-route-id="@Model.Id">
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border-0 shadow" placeholder="Enter Category Name">
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" placeholder="Enter Category Name">
                <label asp-for="DisplayOrder" class="ms-2"></label>
            </div>
            <div class="mt-3 text-primary">Are you sure to delete this category?</div>
            <div class="row">
                <div class="col-lg-6 col-md-4">
                    <button type="submit" class="btn btn-danger mt-2 form-control">Delete</button>
                </div>
                <div class=" col-lg-6 col-md-4 ">
                    <a asp-controller="Category" asp-action="Index" class="mt-2 btn btn-outline-secondary form-control">
                        Cancel
                    </a>
                </div>

            </div>



        </form>

    </div>
</div>
